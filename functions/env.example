# === Firebase Admin SDK Configuration ===
FIREBASE_ADMIN_PROJECT_ID=apptalepify-14dbc
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-fbsvc@apptalepify-14dbc.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# === NetGSM OTP Provider Configuration ===
NETGSM_USER=your_netgsm_username
NETGSM_PASS=your_netgsm_password
NETGSM_HEADER=A.TELLIOGLU

# === OTP Security & Behavior Settings ===
# App signing secret for OTP hashing
APP_SIGNING_SECRET=your_app_signing_secret_for_otp_hashing

# OTP time-to-live in seconds (default: 300 = 5 minutes)
OTP_TTL_SECONDS=300

# OTP maximum attempts before lock (default: 5)
OTP_MAX_ATTEMPTS=5

# OTP lock duration in minutes after max attempts (default: 5)
OTP_LOCK_DURATION_MINUTES=5

# Rate limiting - requests per time period
OTP_RATE_PER_MINUTE=1
OTP_RATE_PER_HOUR=3
OTP_RATE_PER_DAY=5

# OTP storage strategy: 'true' for Firestore (production), 'false' for memory (development)
OTP_USE_FIRESTORE=true

# Dry run mode - logs OTP instead of sending SMS (development/testing)
OTP_DRY_RUN=false

# === Environment Configuration ===
# Node environment: 'production', 'development', 'test'
NODE_ENV=production

# === Notifications Scheduling (Optional tuning) ===
NOTIF_BATCH_SIZE=500
NOTIF_TIMEZONE=Europe/Istanbul

# === Bunny CDN Configuration (existing) ===
BUNNY_STORAGE_ZONE=talepify-media2
BUNNY_STORAGE_HOST=storage.bunnycdn.com
BUNNY_STORAGE_KEY=your_bunny_storage_access_key
BUNNY_CDN_HOST=media.talepify.com
CONVERT_HEIC_TO_JPEG=true
ALLOW_PUBLIC_UPLOADS=false
MAX_UPLOAD_MB=15
FORCE_UNIQUE_FILENAMES=true
ALLOWED_ORIGINS=https://talepify.com