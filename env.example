# İstemci için bayraklar (sırlar koymayın)
USE_BUNNY=true
BUNNY_CDN_HOST=media.talepify.com

# Firebase Auth Custom Token API
API_BASE_URL=https://europe-west1-apptalepify-14dbc.cloudfunctions.net/bunny

# Auth System Feature Flag
AUTH_CUSTOM_TOKEN_ENABLED=true

# Sunucu (Functions) tarafı için referans - istemciye koymayın
# BUNNY_STORAGE_ZONE=talepify-media2
# BUNNY_STORAGE_HOST=storage.bunnycdn.com
# BUNNY_STORAGE_KEY=__ENVDE_SECRETS_ILE_GELECEK__

# ===== OTP/SMS Konfigürasyonu =====
# OTP sağlayıcısı: 'netgsm' (production) veya 'mock' (development/test)
OTP_PROVIDER=mock

# Netgsm SMS API bilgileri (sadece OTP_PROVIDER=netgsm iken gerekli)
NETGSM_USER=
NETGSM_PASS=
NETGSM_HEADER=

# OTP güvenlik ayarları
APP_SIGNING_SECRET=your-secret-key-for-otp-hashing

# OTP davranış ayarları
OTP_TTL_SECONDS=180
OTP_RESEND_COOLDOWN_SECONDS=60
OTP_MAX_ATTEMPTS=5

# Rate limiting (kötüye kullanım önleme)
OTP_RATE_PER_MINUTE=1
OTP_RATE_PER_HOUR=3
OTP_RATE_PER_DAY=5

# Test/staging için dry run (gerçek SMS gönderilmez, sadece loglanır)
OTP_DRY_RUN=false

# === Notifications Feature Flags ===
NOTIF_ENABLED=true
ANDROID_DEFAULT_CHANNEL_ID=default_channel
ANDROID_DEFAULT_CHANNEL_NAME=General Notifications
 
# === Map Pool (Portfolio Map) Feature Flags ===
# Sadece Portföy Havuzu → Harita Görünümü ekranında Mapbox kullanımı
USE_MAPBOX_POOL=false
MAPBOX_PUBLIC_TOKEN=
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v12